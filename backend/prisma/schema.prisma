generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Institute {
  id     String @id @default(cuid())
  name   String
  code   String @unique
  status String @default("PENDING")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  departments Department[]
  students   StudentAcademicProfile[]

  @@map("Institute")
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String
  passwordHash String

  role String // INSTITUTE_ADMIN, DEPARTMENT_HOD, FACULTY, STUDENT

  faceData         Bytes?
  rfidUid          String?
  biometricTemplate Bytes?

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  departmentId String?
  department   Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, instituteId])
  @@map("User")
}

model Department {
  id   String @id @default(cuid())
  name String

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  hodId String?
  hod   User?   @relation()

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  faculty  FacultySubject[]
  students StudentAcademicProfile[]

  @@unique([name, instituteId])
  @@map("Department")
}

model StudentAcademicProfile {
  id        String @id @default(cuid())
  year      Int
  semester  Int
  division  String
  rollNo    String?
  studentId String     @unique
  student   User       @relation(fields: [studentId], references: [id], onDelete: Cascade)

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("StudentAcademicProfile")
}

model FacultySubject {
  id        String @id @default(cuid())
  subject   String
  facultyId String
  faculty   User   @relation(fields: [facultyId], references: [id], onDelete: Cascade)

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("FacultySubject")
}

