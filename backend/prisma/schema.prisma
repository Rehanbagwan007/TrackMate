// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int     @id @default(autoincrement())
  email           String  @unique
  name            String
  password        String
  phone           String?
  role            String
  idProofUrl      String?
  faceEmbedding   String?
  biometricData   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  hod             HOD?
  faculty         Faculty?
  student         Student?
  approvedRequests EnrollmentRequest[] @relation("ApprovedEnrollments")
}

model Department {
  id    Int     @id @default(autoincrement())
  name  String
  hods      HOD[]
  faculty   Faculty[]
  students  Student[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enrollmentRequests EnrollmentRequest[]
}

model HOD {
  id           Int     @id @default(autoincrement())
  user         User       @relation(fields: [userId], references: [id])
  userId       Int     @unique
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
}

model Faculty {
  id            Int      @id @default(autoincrement())
  user          User        @relation(fields: [userId], references: [id])
  userId        Int     @unique
  department    Department  @relation(fields: [departmentId], references: [id])
  departmentId  Int
  qualifications String?
}

model Student {
  id           Int     @id @default(autoincrement())
  user         User       @relation(fields: [userId], references: [id])
  userId       Int     @unique
  rollNumber   String     @unique
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  year         Int
  division     String
}

model EnrollmentRequest {
  id              Int    @id @default(autoincrement())
  email           String
  name            String
  phone           String?
  department      Department? @relation(fields: [departmentId], references: [id])
  departmentId    Int?
  roleRequested   String
  status          String    @default("pending")
  approver        User?     @relation("ApprovedEnrollments", fields: [approverId], references: [id])
  approverId      Int?
  idProofUrl      String?
  faceEmbedding   String?
  biometricData   String?
  qualifications  String?
  rollNumber      String?
  year            Int?
  division        String?
  password        String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
