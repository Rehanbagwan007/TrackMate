// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model for all roles
model User {
  id              String   @id @default(cuid())
  email           String   @unique
  name            String
  password        String
  phone           String?
  role            String   // "INSTITUTE_ADMIN", "HOD", "FACULTY", or "STUDENT"
  idProofUrl      String?  // URL to the uploaded ID proof
  faceEmbedding   String?  // Placeholder for face scan data
  biometricData   String?  // Placeholder for biometric data
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  hod             HOD?
  faculty         Faculty?
  student         Student?
  approvedRequests EnrollmentRequest[] @relation("ApprovedEnrollments")
}

model Department {
  id    Int     @id @default(autoincrement())
  name  String
  hods      HOD[]
  faculty   Faculty[]
  students  Student[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  enrollmentRequests EnrollmentRequest[]
}

model HOD {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String     @unique
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
}

model Faculty {
  id            String      @id @default(cuid())
  user          User        @relation(fields: [userId], references: [id])
  userId        String      @unique
  department    Department  @relation(fields: [departmentId], references: [id])
  departmentId  Int
  qualifications String?
}

model Student {
  id           String     @id @default(cuid())
  user         User       @relation(fields: [userId], references: [id])
  userId       String     @unique
  rollNumber   String     @unique
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  year         Int
  division     String
}

model EnrollmentRequest {
  id              String    @id @default(cuid())
  email           String
  name            String
  phone           String?
  department      Department? @relation(fields: [departmentId], references: [id])
  departmentId    Int?
  roleRequested   String    // "HOD", "FACULTY", or "STUDENT"
  status          String    @default("pending") // "pending", "approved", "rejected"
  approver        User?     @relation("ApprovedEnrollments", fields: [approverId], references: [id])
  approverId      String?
  idProofUrl      String?
  faceEmbedding   String?
  biometricData   String?
  qualifications  String?   // For Faculty
  rollNumber      String?   // For Student
  year            Int?      // For Student
  division        String?   // For Student
  password        String    // Store a securely hashed password
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
