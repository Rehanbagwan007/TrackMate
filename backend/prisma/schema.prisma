generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"
}

datasource db {
  provider  = "postgresql"
 
}

model Institute {
  id     String @id @default(cuid())
  name   String
  code   String @unique
  status String @default("PENDING")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users      User[]
  departments Department[]
  students   StudentAcademicProfile[]

  @@map("Institute")
}

model User {
  id           String @id @default(cuid())
  name         String
  email        String
  passwordHash String

  role String // INSTITUTE_ADMIN, DEPARTMENT_HOD, FACULTY, STUDENT

  faceData         Bytes?
  rfidUid          String?
  biometricTemplate Bytes?

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  // This user belongs to a department. This is the "many" side of a one-to-many.
  departmentId String?
  department   Department? @relation(name: "DepartmentMembers", fields: [departmentId], references: [id], onDelete: SetNull)

  // This user is a HOD of a department. This is one-to-one.
  hodOf Department? @relation("DepartmentHOD")

  // This user is a student. This is one-to-one.
  academicProfile StudentAcademicProfile? @relation("StudentProfile")

  // This user is a faculty. This is one-to-many.
  subjectsTaught FacultySubject[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([email, instituteId])
  @@map("User")
}

model Department {
  id   String @id @default(cuid())
  name String

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  // A department has one HOD. This is one-to-one.
  hodId String? @unique
  hod   User?   @relation(name: "DepartmentHOD", fields: [hodId], references: [id])

  // A department has many members (users). This is one-to-many.
  members User[] @relation("DepartmentMembers")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  faculty  FacultySubject[]
  students StudentAcademicProfile[]

  @@unique([name, instituteId])
  @@map("Department")
}

model StudentAcademicProfile {
  id        String @id @default(cuid())
  year      Int
  semester  Int
  division  String
  rollNo    String?
  studentId String     @unique
  // This profile belongs to a student (User). This is one-to-one.
  student   User       @relation(name: "StudentProfile", fields: [studentId], references: [id], onDelete: Cascade)

  instituteId String
  institute   Institute @relation(fields: [instituteId], references: [id], onDelete: Cascade)

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("StudentAcademicProfile")
}

model FacultySubject {
  id        String @id @default(cuid())
  subject   String
  facultyId String
  // This subject is taught by a faculty member (User). This is the "many" side of a one-to-many.
  faculty   User   @relation(fields: [facultyId], references: [id], onDelete: Cascade)

  departmentId String
  department   Department @relation(fields: [departmentId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("FacultySubject")
}
